{
  "name": "riftbuilder",
  "version": "1.0.0",
  "description": "Piltover Archive deck scraper and builder helper",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/scrape.ts",
    "scrape": "tsx src/scrape.ts",
    "scrape:live": "tsx src/scrape.ts --live",
    "inventory": "tsx src/scrapeInventory.ts",
    "inventory:headed": "tsx src/scrapeInventory.ts --headed",
    "compare": "tsx src/compare.ts",
    "test": "npm run build",
    "web:dev": "vite --config web/vite.config.ts",
    "web:build": "vite build --config web/vite.config.ts",
    "web:preview": "vite preview --config web/vite.config.ts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.464.0",
    "playwright": "^1.56.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^5.4.10"
  }
}
